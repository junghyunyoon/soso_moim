<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	   <% unless @user.moims.empty? %>
	        <table class="moims" summary="User moims">
	          <%= render @moims %>
	        </table>
	        <%= will_paginate @moims %>
	      <% end %>

    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
	  <strong>Moims</strong> <%= @user.moims.count %>
    	<%= render 'shared/stats' %>
    </td>
  </tr>
</table>
