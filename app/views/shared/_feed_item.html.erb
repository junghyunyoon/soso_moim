<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="moim">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
  <td>
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => feed_item.content %>  
    <%= link_to "edit", edit_moim_path(feed_item)%>
  </td>
  <% else %>
    
	<% unless current_user_manager?(feed_item) %>
	  <div id="attend_form">
	  <% if current_user.attending?(feed_item) %>
	   <%= link_to "attend", edit_moim_path(feed_item)%>
	  <% else %>
	   <%= link_to "unattend", edit_moim_path(feed_item)%>
	  <% end %>
	  </div>
	<% end %>
  <% end %>
</tr>


